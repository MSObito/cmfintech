                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:text="照片3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
